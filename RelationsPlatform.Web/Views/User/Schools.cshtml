@model RelationsPlatform.Web.ViewModels.SchoolsViewModel

@{
    ViewData["Title"] = "Schools";
    Layout = "~/Views/User/_Menu.cshtml";
}

<form class="inputForm" asp-action="AddSchool" method="get">
    <div class="row align-items-center">
        <div class="col">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Name</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Name">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Description</label>
                <div class="col-sm-10 ml-auto">
                    <textarea rows="3" asp-for="Description" class="form-control" placeholder="Description"></textarea>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <div class="col-sm-2 ml-auto">
                    <input type="submit" value="Save" class="btn btn-sm btn-success" style="width:100px;" />
                </div>
            </div>
        </div>
    </div>
</form>


<div id="skillTable" class="container">
    <ul id="skillTable">
        <li id="skillTable" class="table-header">
            <div id="skillTable" class="col-md-5">Name</div>
            <div id="skillTable" class="col-md-6">Description</div>
            <div id="skillTable" class="col-md-1"></div>
        </li>
        @foreach (var item in Model.Schools)
        {
            <li id="skillTable" class="table-row">
                <div id="skillTable" class="col-md-5">@item.Name</div>
                <div id="skillTable" class="col-md-6">@item.Description</div>
                <div id="skillTable" class="col-md-1">
                    <form asp-action="DeleteSchool" asp-route-id="@item.Id" method="post">
                        <input class="btn btn-sm btn-danger" type="submit" value="Delete" />
                    </form>
                </div>
            </li>
        }
    </ul>
</div>
