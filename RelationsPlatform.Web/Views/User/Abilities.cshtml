@model RelationsPlatform.Web.ViewModels.AbilitiesViewModel

@{
    ViewData["Title"] = "Abilities";
    Layout = "~/Views/User/_Menu.cshtml";
}

<form class="inputForm" asp-action="AddAbility" method="get">
    <div class="row align-items-center">
        <div class="col-6">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Ability</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Ability">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Level</label>
                <div class="col-sm-10 ml-auto">
                    <input type="number" asp-for="Level" class="form-control" placeholder="Level">
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-sm-7 ml-auto">
                    <input type="submit" value="Save" class="btn btn-sm btn-success" style="width:100px;" />
                </div>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-5">
            @foreach (var item in Model.Levels)
            {
                <p>@item.Key  -  @item.Value</p>
            }
        </div>
    </div>
</form>


<div id="skillTable" class="container">
    <ul id="skillTable">
        <li id="skillTable" class="table-header">
            <div id="skillTable" class="col-md-3">Skill</div>
            <div id="skillTable" class="col-md-1">Level</div>
            <div id="skillTable" class="col-md-7">Description</div>
            <div id="skillTable" class="col-md-1"></div>
        </li>
        @foreach (var item in Model.Abilities)
        {
        <li id="skillTable" class="table-row">
            <div id="skillTable" class="col-md-3">@item.Name</div>
            <div id="skillTable" class="col-md-1">@item.Level</div>
            <div id="skillTable" class="col-md-7">@item.Description</div>
            <div id="skillTable" class="col-md-1">
                <form asp-action="DeleteAbility" asp-route-id="@item.Id" method="post">
                    <input class="btn btn-sm btn-danger" type="submit" value="Delete" />
                </form>
            </div>
        </li>
        }
    </ul>
</div>
