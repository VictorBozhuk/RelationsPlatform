@{
    Layout = "_Layout";
}

<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<div class="row" id="body-row">
    <div id="sidebar-container" class="sidebar-expanded d-none d-md-block">
        <ul class="list-group">
            <li class="list-group-item sidebar-separator-title text-muted d-flex align-items-center menu-collapsed">
                <small>Меню</small>
            </li>
            <li>
                <a href="#submenu2" data-toggle="collapse" aria-expanded="false" class="bg-dark list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-user fa-fw mr-3"></span>
                        <span class="menu-collapsed">Профіль</span>
                        <span class="submenu-icon ml-auto"></span>
                    </div>
                </a>
                <div id='submenu2' class="collapse sidebar-submenu">
                    <a asp-action="Profile" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">Мій профіль</span>
                    </a>
                    <a asp-action="ChangePassword" class="list-group-item list-group-item-action bg-dark text-white">
                        <span class="menu-collapsed">Змінити пароль</span>
                    </a>
                    <a href="#submenu3" data-toggle="collapse" aria-expanded="false" class="bg-dark list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span class="fa fa-user fa-fw mr-3"></span>
                            <span class="menu-collapsed">Редагувати</span>
                            <span class="submenu-icon ml-auto"></span>
                        </div>
                    </a>
                    <div id='submenu3' class="collapse sidebar-submenu">
                        <a asp-action="EditUser" class="list-group-item list-group-item-action bg-dark text-white">
                            <span class="menu-collapsed">Головна</span>
                        </a>
                        <a href="#submenu4" data-toggle="collapse" aria-expanded="false" class="bg-dark list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-start align-items-center">
                                <span class="fa fa-user fa-fw mr-3"></span>
                                <span class="menu-collapsed">Розширена</span>
                                <span class="submenu-icon ml-auto"></span>
                            </div>
                        </a>
                        <div id='submenu4' class="collapse sidebar-submenu">
                            <a asp-action="ProfessionSkills" class="list-group-item list-group-item-action bg-dark text-white">
                                <span class="menu-collapsed">Професійні навики</span>
                            </a>
                            <a asp-action="Jobs" class="list-group-item list-group-item-action bg-dark text-white">
                                <span class="menu-collapsed">Професії</span>
                            </a>
                            <a asp-action="Abilities" class="list-group-item list-group-item-action bg-dark text-white">
                                <span class="menu-collapsed">Здібності</span>
                            </a>
                            <a asp-action="HigherEducations" class="list-group-item list-group-item-action bg-dark text-white">
                                <span class="menu-collapsed">Вища освіта</span>
                            </a>
                            <a asp-action="Schools" class="list-group-item list-group-item-action bg-dark text-white">
                                <span class="menu-collapsed">Школа</span>
                            </a>
                            <a asp-action="Courses" class="list-group-item list-group-item-action bg-dark text-white">
                                <span class="menu-collapsed">Курси</span>
                            </a>
                        </div>
                    </div>
                </div>
                <a asp-action="AllUsers" class="list-group-item list-group-item-action bg-dark text-white">
                    <span class="fa fa-tasks fa-users mr-3"></span>
                    <span class="menu-collapsed">Всі користувачі</span>
                </a>
                <a asp-action="Relations" class="list-group-item list-group-item-action bg-dark text-white">
                    <span class="fa fa-tasks fa-users mr-3"></span>
                    <span class="menu-collapsed">Мої друзі</span>
                </a>
                <a href="#submenu1" data-toggle="collapse" aria-expanded="false" class="bg-dark list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-tasks fa-fw mr-3"></span>
                        <span class="menu-collapsed">Оголошення</span>
                        <span class="submenu-icon ml-auto"></span>
                    </div>
                </a>
                <div id='submenu1' class="collapse sidebar-submenu">
                    <a asp-action="UserTasks" class="bg-dark list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span class="menu-collapsed">Всі оголошення</span>
                        </div>
                    </a>
                    <a asp-action="MyUserTasks" class="bg-dark list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span class="menu-collapsed">Мої оголошення</span>
                        </div>
                    </a>
                    <a asp-action="CreateUserTask" class="bg-dark list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-start align-items-center">
                            <span class="menu-collapsed">Створити нове</span>
                        </div>
                    </a>
                    </div>
            </li>
            <li class="list-group-item sidebar-separator-title text-muted d-flex align-items-center menu-collapsed">
                <small>Опції</small>
            </li>
            <li>
                <a href="#" class="bg-dark list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span class="fa fa-question fa-fw mr-3"></span>
                        <span class="menu-collapsed">Допомога</span>
                    </div>
                </a>
                <a href="#top" data-toggle="sidebar-colapse" class="bg-dark list-group-item list-group-item-action d-flex align-items-center">
                    <div class="d-flex w-100 justify-content-start align-items-center">
                        <span id="collapse-icon" class="fa fa-2x mr-3"></span>
                        <span id="collapse-text" class="menu-collapsed">Звернути</span>
                    </div>
                </a>
            </li>
        </ul><!-- List Group END-->
    </div><!-- sidebar-container END -->

    <div class="col p-4">
        @RenderBody()
    </div>

</div><!-- body-row END -->