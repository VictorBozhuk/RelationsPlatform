@model RelationsPlatform.Web.ViewModels.ChatViewModel

@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/User/_Menu.cshtml";
}

<form asp-action="Chat" method="get">
    <input asp-for="IdGetter" type="text" hidden="hidden" value="@Model.IdGetter"/>
    <div class="messaging">
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <h4>Оновити</h4>
                    </div>
                    <div class="srch_bar">
                        <div class="stylish-input-group">
                            <input type="text" class="search-bar" placeholder="Пошук">
                        </div>
                    </div>
                </div>
                <div class="inbox_chat scroll">
                    <div class="chat_list active_chat">
                        <div class="chat_people">
                            <div class="chat_img"> <img src="~/img/Screenshot_3.png" alt="sunil"> </div>
                            <div class="chat_ib">
                                <h5>Павло Стрілецький<span class="chat_date">May 22</span></h5>
                                <p>
                                    Мені потрібна деяка інформація.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mesgs">
                <div class="msg_history">

                    <div class="incoming_msg">
                        <div class="incoming_msg_img"> <img src="~/img/Screenshot_3.png" alt="sunil"> </div>
                        <div class="received_msg">
                            <div class="received_withd_msg">
                                <p>Привіт</p>
                                <span class="time_date"> 11:01 AM    |    Today</span>
                            </div>
                        </div>
                    </div>
                    <div class="outgoing_msg">
                        <div class="sent_msg">
                            <p>Привіт</p>
                            <span class="time_date"> 11:01 AM    |    Today</span>
                        </div>
                    </div>
                    <div class="incoming_msg">
                        <div class="incoming_msg_img"> <img src="~/img/Screenshot_3.png" alt="sunil"> </div>
                        <div class="received_msg">
                            <div class="received_withd_msg">
                                <p>
                                    Мені потрібна деяка інформація.
                                </p>
                                <span class="time_date"> 11:02 AM    |    Today</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <input asp-for="Text" type="text" class="write_msg" placeholder="Type a message" />
                        <button class="msg_send_btn" type="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>