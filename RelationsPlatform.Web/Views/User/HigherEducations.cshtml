@model RelationsPlatform.Web.ViewModels.HigherEducationsViewModel

@{
    ViewData["Title"] = "HigherEducations";
    Layout = "~/Views/User/_Menu.cshtml";
}

<form class="inputForm" asp-action="AddHigherEducation" method="get">
    <div class="row align-items-center">
        <div class="col">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">University</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="University" class="form-control" placeholder="University">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Faculty</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="Faculty" class="form-control" placeholder="Faculty">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Speciality</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="Speciality" class="form-control" placeholder="Speciality">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Status</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="Status" class="form-control" placeholder="Status">
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <div class="col-sm-2 ml-auto">
                    <input type="submit" value="Save" class="btn btn-sm btn-success" style="width:100px;" />
                </div>
            </div>
        </div>
    </div>
</form>


<div id="skillTable" class="container">
    <ul id="skillTable">
        <li id="skillTable" class="table-header">
            <div id="skillTable" class="col-md-3">University</div>
            <div id="skillTable" class="col-md-3">Faculty</div>
            <div id="skillTable" class="col-md-3">Speciality</div>
            <div id="skillTable" class="col-md-2">Status</div>
            <div id="skillTable" class="col-md-1"></div>
        </li>
        @foreach (var item in Model.higherEducations)
        {
        <li id="skillTable" class="table-row">
            <div id="skillTable" class="col-md-3">@item.University</div>
            <div id="skillTable" class="col-md-3">@item.Faculty</div>
            <div id="skillTable" class="col-md-3">@item.Specialty</div>
            <div id="skillTable" class="col-md-2">@item.Status</div>
            <div id="skillTable" class="col-md-1">
                <form asp-action="DeleteHigherEducation" asp-route-id="@item.Id" method="post">
                    <input class="btn btn-sm btn-danger" type="submit" value="Delete" />
                </form>
            </div>
        </li>
        }
    </ul>
</div>
