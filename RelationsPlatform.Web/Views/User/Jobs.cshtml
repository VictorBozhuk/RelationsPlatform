@model RelationsPlatform.Web.ViewModels.JobsViewModel

@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/User/_Menu.cshtml";
}

<form class="inputForm" asp-action="AddJob" method="get">
    <div class="row align-items-center">
        <div class="col">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Position</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="NameOfPosition" class="form-control" placeholder="Position">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Work place</label>
                <div class="col-sm-10 ml-auto">
                    <input type="text" asp-for="NameOfCompany" class="form-control" placeholder="Name of work place">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right font-weight-bold">Level</label>
                <div class="col-sm-10 ml-auto">
                    <textarea rows="3" asp-for="DescriptionOfWork" class="form-control" placeholder="Description of work"></textarea>
                </div>
            </div>
            <div class="form-group row justify-content-end">
                <div class="col-sm-2 ml-auto">
                    <input type="submit" value="Save" class="btn btn-sm btn-success" style="width:100px;" />
                </div>
            </div>
        </div>
    </div>
</form>


<div id="skillTable" class="container">
    <ul id="skillTable">
        <li id="skillTable" class="table-header">
            <div id="skillTable" class="col-md-3">Position</div>
            <div id="skillTable" class="col-md-3">Work place</div>
            <div id="skillTable" class="col-md-5">Description</div>
            <div id="skillTable" class="col-md-1"></div>
        </li>
        @foreach (var item in Model.Jobs)
        {
            <li id="skillTable" class="table-row">
                <div id="skillTable" class="col-md-3">@item.NamePosition</div>
                <div id="skillTable" class="col-md-3">@item.NameCompany</div>
                <div id="skillTable" class="col-md-5">@item.DescriptionOfWork</div>
                <div id="skillTable" class="col-md-1">
                    <form asp-action="DeleteJob" asp-route-id="@item.Id" method="post">
                        <input class="btn btn-sm btn-danger" type="submit" value="Delete" />
                    </form>
                </div>
            </li>
        }
    </ul>
</div>
