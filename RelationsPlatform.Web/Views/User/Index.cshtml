@model RelationsPlatform.Web.ViewModels.UserViewModel

@{
    ViewData["Title"] = "MainUserPage";
}

<div class="container" style="min-height:298px">
    <div class="container" style="position: absolute; top: 50%; transform: translateY(-50%);">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6 border border-light p-3 bg-light">
                <h2>Profile</h2>
                <p class="mb-1"><strong>Full Name:</strong> @Model.Name</p>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" class="transButton" value="Log out" />
                </form>
            </div>
        </div>
    </div>
</div>